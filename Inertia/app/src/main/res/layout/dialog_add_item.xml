<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_custom"
        android:drawableStart="@drawable/baseline_title_"
        android:drawablePadding="15dp"
        android:drawableTint="@color/green"
        android:elevation="6dp"
        android:hint="Title"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/green" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_custom"
        android:drawableStart="@drawable/baseline_task"
        android:drawablePadding="15dp"
        android:drawableTint="@color/green"
        android:elevation="6dp"
        android:hint="Description"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/green" />

    <EditText
        android:id="@+id/edit_text_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_custom"
        android:drawableStart="@drawable/baseline_date"
        android:drawablePadding="15dp"
        android:drawableTint="@color/green"
        android:elevation="6dp"
        android:text=""
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/green"
        android:textColorHint="@color/green" />

    <EditText
        android:id="@+id/edit_text_priority"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_custom"
        android:drawableStart="@drawable/baseline_time"
        android:drawablePadding="15dp"
        android:drawableTint="@color/green"
        android:elevation="6dp"
        android:hint="Time"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Switch
            android:id="@+id/swi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:checked="false"
            android:text="Reminder"
            android:textColor="@color/green"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"/>

    </LinearLayout>
</LinearLayout>
